# BetterSpotlight environment contract example
# Copy to .env for local use. Do not commit real credentials.

###############################################################################
# GitHub Repository Variables (CI/CD)
###############################################################################
# Namespace runner labels/profiles
NS_RUNNER_MACOS_SM=namespace-profile-betterspotlight-macos-sm
NS_RUNNER_MACOS_MD=namespace-profile-betterspotlight-macos-md
NS_RUNNER_MACOS_LG=namespace-profile-betterspotlight-macos-lg

# Immutable model mirror base URL (required by CI lanes)
BS_MODEL_MIRROR_BASE_URL=https://mirror.example.com/betterspotlight-models

###############################################################################
# GitHub Repository Secrets (Release / Notarization)
###############################################################################
# Developer ID identity string, e.g. "Developer ID Application: Org Name (TEAMID)"
DEVELOPER_ID=
APPLE_ID=
APPLE_APP_SPECIFIC_PASSWORD=
TEAM_ID=

###############################################################################
# Canonical CI Build/Test Contract (scripts/ci/*)
###############################################################################
BS_BUILD_DIR=build-release
BS_BUILD_TYPE=Release
BS_BUILD_JOBS=
BS_QT_PREFIX_PATH=

# Deterministic defaults for CI should keep model fetching OFF
BS_FETCH_MODELS=OFF
BS_FETCH_MAX_QUALITY_MODEL=0
BS_ENABLE_SPARKLE=OFF
BS_ENABLE_COVERAGE=OFF
BS_PREFER_COREML=ON

BS_CTEST_LABEL_REGEX=^(unit|integration|service_ipc|relevance|docs_lint)$
BS_CTEST_LABEL_EXCLUDE_REGEX=

BS_COVERAGE_PHASE=phase1
BS_COVERAGE_BUILD_DIR=build-coverage
BS_COVERAGE_THRESHOLDS_FILE=Tests/coverage_thresholds.json
BS_COVERAGE_EXCLUSIONS_FILE=Tests/coverage_exclusions.txt
BS_COVERAGE_CTEST_LABEL_REGEX=^(unit|integration|service_ipc|relevance|docs_lint)$
BS_COVERAGE_CTEST_LABEL_EXCLUDE_REGEX=^(relevance|relevance_stress)$

###############################################################################
# Locked model asset supply chain
###############################################################################
BS_MODEL_ASSET_LOCKFILE=tools/model_assets.lock.json
BS_MODEL_PREFETCH_FORCE=0

# Legacy fetch script switch (kept for compatibility)
BETTERSPOTLIGHT_FETCH_MAX_QUALITY=0

###############################################################################
# Release pipeline (scripts/release/build_macos_release.sh)
###############################################################################
BS_RELEASE_BUILD_DIR=build-release
BS_RELEASE_OUTPUT_DIR=dist/release
BS_RELEASE_BUILD_TYPE=Release
BS_RELEASE_APP_NAME=BetterSpotlight
BS_ENTITLEMENTS_PATH=packaging/macos/entitlements.plist

BS_ENABLE_SPARKLE=1
BS_RUN_MACDEPLOYQT=1
BS_MACDEPLOYQT_INCLUDE_QMLDIR=1
BS_MACDEPLOYQT_TIMEOUT_SEC=600
BS_SKIP_BUILD=0
BS_SIGN=0
BS_ADHOC_SIGN_WHEN_UNSIGNED=1
BS_NOTARIZE=0
BS_CREATE_APP_ZIP=1
BS_CREATE_DMG=1
BS_REQUIRE_ONLINE_RANKER_BOOTSTRAP=0

# Optional provenance metadata overrides
BS_BUILDER_PROVIDER=
BS_BUILDER_RUNNER_CLASS=
BS_BUILDER_RUNNER_LABEL=

###############################################################################
# Attestation verification helper (tools/verify_attestation.sh)
###############################################################################
GH_TOKEN=
GITHUB_REPOSITORY=owner/repo

###############################################################################
# Test fixture model overrides
###############################################################################
BETTERSPOTLIGHT_TEST_MODELS_DIR=
BETTERSPOTLIGHT_MODELS_DIR=
BETTERSPOTLIGHT_DISABLE_COREML=1

###############################################################################
# Optional long-run benchmark env (if you run these locally)
###############################################################################
BS_STRESS_DURATION_SECONDS=172800
BS_STRESS_QUERY_BIN=
BS_STRESS_INDEXER_BIN=
BS_STRESS_EXTRACTOR_BIN=
BS_STRESS_SAMPLE_INTERVAL=5
BS_STRESS_INTEGRITY_INTERVAL=120
BS_STRESS_ARTIFACT_DIR=

BS_MEM_DURATION_SECONDS=86400
BS_MEM_SAMPLE_INTERVAL=60
BS_MEM_DRIFT_LIMIT_MB=10
BS_MEM_QUERY_BIN=
BS_MEM_INDEXER_BIN=
BS_MEM_EXTRACTOR_BIN=
BS_MEM_ARTIFACT_DIR=
