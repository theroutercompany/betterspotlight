# Sample .env fixture for text extraction testing.
# BetterSpotlight development environment configuration.

# Application
BS_APP_NAME=BetterSpotlight
BS_VERSION=0.1.0
BS_ENV=development
BS_LOG_LEVEL=debug

# Database
BS_DB_PATH=~/Library/Application Support/BetterSpotlight/index.db
BS_DB_WAL_MODE=true
BS_DB_BUSY_TIMEOUT=5000

# Indexing
BS_MAX_FILE_SIZE_MB=10
BS_CONCURRENT_WORKERS=4
BS_EXTRACTION_TIMEOUT=30
BS_BATCH_SIZE=100

# Search
BS_DEFAULT_LIMIT=50
BS_FUZZY_MATCHING=true
BS_MIN_QUERY_LENGTH=2

# XPC Services
BS_INDEXER_SERVICE=com.betterspotlight.indexer
BS_EXTRACTOR_SERVICE=com.betterspotlight.extractor
BS_QUERY_SERVICE=com.betterspotlight.query

# Feature flags
BS_FEATURE_OCR=false
BS_FEATURE_PDF_EXTRACTION=true
BS_FEATURE_CONTEXT_SIGNALS=true
